<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
  <style name="Theme.U2020.Debug" parent="Theme.AppCompat.NoActionBar">
    <item name="colorAccent">@color/accent</item>
    <item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
  </style>
  <style name="Theme.U2020.External" parent="Theme.U2020">
    <item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
  </style>

  <style name="Widget.U2020.DebugDrawer.Header" parent="None">
    <item name="android:paddingBottom">2dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_marginBottom">2dp</item>
    <item name="android:background">@drawable/debug_drawer_header_bg</item>
  </style>

  <style name="Widget.U2020.DebugDrawer.RowWidget" parent="None">
    <item name="android:minHeight">26dp</item>
    <item name="android:layout_marginTop">4dp</item>
  </style>
  <style name="Widget.U2020.DebugDrawer.RowTitle" parent="Widget.U2020.DebugDrawer.RowWidget">
    <item name="android:layout_marginRight">16dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">16sp</item>
  </style>
  <style name="Widget.U2020.DebugDrawer.RowValue" parent="Widget.U2020.DebugDrawer.RowWidget">
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="Widget.U2020.ExternalIntent.Header" parent="None">
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">16dp</item>
    <item name="android:textColor">?android:attr/textColorPrimary</item>
    <item name="android:textSize">18sp</item>
  </style>
  <style name="Widget.U2020.ExternalIntent.Body" parent="None">
    <item name="android:paddingLeft">32dp</item>
    <item name="android:paddingRight">32dp</item>
    <item name="android:textColor">?android:attr/textColorSecondary</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="None">
  </style>

  <style name="Theme.U2020" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:textColorPrimary">@color/text_color_primary</item>
    <item name="android:textColorSecondary">@color/text_color_secondary</item>

    <item name="android:progressBarStyle">@style/Widget.U2020.ProgressBar</item>

    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowActionBarOverlay">true</item>
    <item name="android:windowBackground">@color/content_background</item>

    <item name="colorAccent">@color/accent</item>
    <item name="colorPrimary">@color/accent</item>
    <item name="android:statusBarColor" tools:ignore="NewApi">@color/status_bar</item>
    <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
  </style>

  <style name="Theme.U2020.TrendingTimespan" parent="Theme.AppCompat.Light">
    <item name="android:spinnerDropDownItemStyle">
      @style/Widget.U2020.TrendingTimespan.DropDownItem
    </item>
  </style>

  <style name="Widget.U2020.TrendingTimespan.DropDownItem"
         parent="Widget.AppCompat.Light.DropDownItem.Spinner">
    <item name="android:background">@drawable/selectable_item_background</item>
  </style>

  <style name="Widget.U2020.ProgressBar" parent="None">
    <item name="android:indeterminateDrawable">@drawable/progress_indeterminate</item>
    <item name="android:indeterminateOnly">true</item>
    <item name="android:indeterminateBehavior">repeat</item>
    <item name="android:indeterminateDuration">900</item>
    <item name="android:minWidth">40dp</item>
    <item name="android:maxWidth">40dp</item>
    <item name="android:minHeight">40dp</item>
    <item name="android:maxHeight">40dp</item>
  </style>
</resources>
